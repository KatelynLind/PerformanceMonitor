#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

COMMIT_MSG=$(cat "$1")

# Validate commit message format
if ! echo "$COMMIT_MSG" | grep -qE '^(feat|fix|docs|style|refactor|perf|test|chore|security|audit)(\(.+\))?:'; then
  echo "❌ Commit message must follow the format: <type>(<scope>): <subject>"
  echo "Types: feat, fix, docs, style, refactor, perf, test, chore, security, audit"
  exit 1
fi

echo "✅ Commit message format is valid!"
